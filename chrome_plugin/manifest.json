{
  "manifest_version": 2,

  "name": "Recept≈≥ meistras",
  "description": "HackerGames 2016!!!1",
  "version": "0.1",

  "browser_action": {
    "default_icon": "graphics/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "graphics/receptumeistras-icon-chromestore-128.png"
  },
  "permissions": [
    "activeTab",
    "https://www.google-analytics.com/",
    "storage",
    "tabs"
  ],


  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "scripts/jquery-2.2.4.min.js", "scripts/content_script.js" ],
      "run_at": "document_end" // pay attention to this line
    }
  ],
  "background": {
    "scripts": ["scripts/jquery-2.2.4.min.js", "scripts/eventPage.js"],
    "persistent": true
  }
}
