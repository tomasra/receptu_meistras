{
  "manifest_version": 2,
  "name": "Receptų meistras",
  "description": "Receptų meistras leidžia peržiūrint maisto gaminimo receptus iškart matyti ir kainas, bei greičiau užsisakyti produktus. Beta versija veikia su 1000receptu.lt.",
  "version": "0.2",
  "browser_action": {
    "default_icon": "graphics/receptumeistras-icon-chrome-38-2-neutral.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "graphics/receptumeistras-icon-chromestore-128.png"
  },
  "permissions": [
    "activeTab",
    "https://www.google-analytics.com/",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.delfi.lt/1000receptu/*",
        "https://www.delfi.lt/1000receptu/*",
        "http://tomasra.com:5000/*"
      ],
      "js": [ "scripts/jquery-2.2.4.min.js", "scripts/content_script.js" ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.barbora.lt/produktai/*"
      ],
      "js": [ "scripts/jquery-2.2.4.min.js", "scripts/context_barbora.js" ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [ "scripts/jquery-2.2.4.min.js", "scripts/eventPage.js" ],
    "persistent": true
  }
}
